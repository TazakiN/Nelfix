<div class="film-card bg-gray-800 p-4 rounded-lg shadow-md hover:scale-105 transition-all duration-300 relative overflow-hidden">
  <img src="{{cover_image_url}}" alt="{{title}}" class="w-full h-48 object-cover rounded mb-4" />
  <h3 class="text-2xl font-bold text-white">{{title}}</h3>
  <p class="text-gray-400">{{release_year}}</p>
  <p class="text-gray-300 mb-2">{{director}}</p>
  <div class="fade-text text-sm">
    {{description}}
  </div>
  <a href="#" onclick="viewFilmDetails('{{id}}'); return false;" class="details-button absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white font-bold py-2 px-4 rounded">
    View Details
  </a>
</div>
