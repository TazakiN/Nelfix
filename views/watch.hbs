{{#extend "main"}}

  {{#content "head" mode="append"}}
    <title>{{data.title}} | Nelfix</title>
  {{/content}}

  {{#content "body"}}
  <div class="min-h-screen text-white flex flex-col items-center px-4 py-8">
    <div class="w-full max-w-5xl">
      <div class="video-container flex justify-center mb-8">
        <video class="rounded-lg shadow-lg w-full max-h-[600px]" controls aria-label="Watch {{data.title}}">
          <source src="{{data.video_url}}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
      <div class="film-info bg-gray-900 p-6 rounded-lg shadow-md text-center">
        <h1 class="text-3xl font-bold mb-4">{{data.title}}</h1>
        <p class="text-lg text-gray-300 mb-6">{{data.description}}</p>
        <div class="flex flex-wrap justify-center gap-6 mb-6">
          <p><span class="font-semibold">Directed by:</span> {{data.director}}</p>
          <p><span class="font-semibold">Released:</span> {{data.release_year}}</p>
          <p><span class="font-semibold">Duration:</span> {{data.duration}} minutes</p>
        </div>
        <div class="genre-tags flex justify-center flex-wrap gap-3 mt-6">
          {{#each data.genre}}
            <span class="bg-gray-800 px-4 py-2 rounded-full text-sm font-medium">{{this}}</span>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  {{/content}}  

{{/extend}}
