{{#extend "main"}}

  {{#content "head" mode="append"}}
    <title>{{data.title}} | Nelfix</title>
    <style>
      body {
        background-color: #000;
        font-family: 'Inter', sans-serif;
      }
      .video-container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 1000px;
        margin: 0 auto;
      }
      .video-container video {
        width: fit-content;
        height: auto;
        max-height: 600px;
        border-radius: 10px;
      }
    </style>
  {{/content}}

  {{#content "body"}}
  <div class="p-4 py-8 text-white">
    <div class="video-container">
      <video controls>
        <source src="{{data.video_url}}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
    <div class="film-info mt-10">
      <h1 class="text-3xl font-bold text-center mb-4">{{data.title}}</h1>
      <p class="text-lg text-gray-300 text-center mb-6">{{data.description}}</p>
      <div class="flex justify-center space-x-8 mb-6">
        <p><span class="font-semibold">Directed by:</span> {{data.director}}</p>
        <p><span class="font-semibold">Released:</span> {{data.release_year}}</p>
        <p><span class="font-semibold">Duration:</span> {{data.duration}} minutes</p>
      </div>
      <div class="genre-tags flex justify-center flex-wrap gap-2 mt-6">
        {{#each data.genre}}
          <span class="bg-gray-700 px-3 py-1 rounded-full text-sm font-medium">{{this}}</span>
        {{/each}}
      </div>
    </div>
  </div>
  {{/content}}  

{{/extend}}
