{{#extend "main"}}

  {{#content "head" mode="append"}}
    <title>{{data.title}} | Nelfix</title>
    <script src="/js/filmDetail.js" defer></script>
    <style>
      .gradient-bg {
        background: linear-gradient(to right, #4a5568, #2d3748);
      }
      .responsive-img {
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
    </style>
  {{/content}}

  {{#content "body"}}
  <div class="p-4 py-8 text-white min-h-screen">
    {{#if data}}
      <div class="max-w-5xl mx-auto gradient-bg shadow-lg rounded-lg overflow-hidden relative">
        <div class="md:flex">
          <div class="md:w-1/3 lg:w-1/4">
            <img class="responsive-img h-64 md:h-auto" src="{{data.cover_image_url}}" alt="{{data.title}}">
          </div>
          <div class="p-8 flex-grow flex flex-col md:w-2/3 lg:w-3/4">
            <div class="uppercase tracking-wide text-sm text-orange-400 font-semibold">{{data.genre}}</div>
            <h1 class="mt-2 text-4xl font-bold tracking-tight text-white">{{data.title}}</h1>
            <p class="mt-2 text-gray-300">Directed by {{data.director}}</p>
            <p class="mt-1 text-gray-300">Released in {{data.release_year}}</p>
            <p class="mt-4 text-gray-400 leading-relaxed">{{data.description}}</p>
            <div class="mt-4 flex justify-between items-center text-gray-300">
              <span>Duration: {{data.duration}} minutes</span>
              <span class="text-orange-400 font-bold">Price: ${{data.price}}</span>
            </div>
            <!-- Added wrapper for button alignment -->
            <div class="mt-6 flex justify-end gap-4">
              <a onclick="handleBuy()" class="inline-block bg-blue-500 text-white px-6 py-3 rounded-full hover:bg-blue-600 transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer">
                Buy Film
              </a>
              <a onclick="handleWatch()" class="inline-block bg-orange-500 text-white px-6 py-3 rounded-full hover:bg-orange-600 transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer">
                Watch Now
              </a>
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="text-center">
        <h1 class="text-3xl text-orange-400 font-bold">{{message}}</h1>
      </div>
    {{/if}}
  </div>
  {{/content}}  

{{/extend}}
