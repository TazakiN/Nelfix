<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Film</title>
</head>
<body class="bg-gray-100 m-4">

  <form action="/films" method="POST" enctype="multipart/form-data" class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-6 text-center text-gray-700">Upload Film Baru</h2>
    
    <div class="mb-4">
      <label for="title" class="block text-gray-600 font-semibold mb-2">Title:</label>
      <input type="text" id="title" name="title" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
    
    <div class="mb-4">
      <label for="description" class="block text-gray-600 font-semibold mb-2">Description:</label>
      <textarea id="description" name="description" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
    </div>
    
    <div class="mb-4">
      <label for="director" class="block text-gray-600 font-semibold mb-2">Director:</label>
      <input type="text" id="director" name="director" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
    
    <div class="mb-4">
      <label for="releaseYear" class="block text-gray-600 font-semibold mb-2">Release Year:</label>
      <input type="number" id="releaseYear" name="release_year" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
    
    <div class="mb-4">
      <label for="genre" class="block text-gray-600 font-semibold mb-2">Genre:</label>
      <input type="text" id="genre" name="genre" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
  
    <div class="mb-4">
      <label for="price" class="block text-gray-600 font-semibold mb-2">Price:</label>
      <input type="number" id="price" name="price" required class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
    </div>
  
    <div class="mb-4 flex flex-row gap-5">
      <div>
        <label for="cover_image" class="grow block text-gray-600 font-semibold mb-2">Cover Image:</label>
        <input type="file" id="cover_image" name="cover_image" accept="image/*" class="hidden">
        <button type="button" onclick="document.getElementById('cover_image').click()" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-blue-500 text-white font-semibold shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 transition ease-in-out duration-300">
          Upload Image
        </button>
        <span id="image_file_name" class="mt-1 text-gray-500 text-sm"></span>
      </div>
      <div>
        <label for="video" class="block text-gray-600 font-semibold mb-2">Video :</label>
        <input type="file" id="video" name="video" accept="video/*" class="hidden" required>
        <button type="button" onclick="document.getElementById('video').click()" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-green-500 text-white font-semibold shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-400 transition ease-in-out duration-300">
          Upload Video
        </button>
        <span id="video_file_name" class="mt-1 text-gray-500 text-sm"></span>
      </div>
    </div>
  
    <button type="submit" class="w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
      Submit
    </button>
  </form>

  <!-- JavaScript for displaying file names -->
  <script>
    document.getElementById('cover_image').addEventListener('change', function(event) {
      const fileName = event.target.files[0]?.name || '';
      document.getElementById('image_file_name').textContent = fileName;
    });

    document.getElementById('video').addEventListener('change', function(event) {
      const fileName = event.target.files[0]?.name || '';
      document.getElementById('video_file_name').textContent = fileName;
    });
  </script>
</body>
</html>
