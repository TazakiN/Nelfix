{{#extend "main"}}

  {{#content "head" mode="append"}}
    <title>Account Details - Nelfix</title>
    <script src="/js/handleAccDetail.js" defer></script>
  {{/content}}

  {{#content "body" }}
  <div class="container mx-auto py-12 px-4">
    <h1 class="text-4xl font-bold text-orange-400 mb-8 text-center drop-shadow-xl">Account Details</h1>

    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold text-white mb-4">User Information</h2>
      <p class="text-white mb-2"><strong>Username:</strong> {{data.username}}</p>
      <p class="text-white mb-2"><strong>Email:</strong> {{data.email}}</p>
      <p class="text-white mb-2"><strong>Balance:</strong> ${{data.balance}}</p>
    </div>

    <div class="bg-gray-800 p-6 rounded-lg shadow-lg mt-6">
      <h2 class="text-2xl font-semibold text-white mb-4">Add Balance</h2>
      <form id="addBalanceForm" class="space-y-4">
        <input type="number" id="increment" name="increment" class="w-full p-2 rounded-md" placeholder="Amount to Add">
        <button type="submit" class="bg-orange-400 hover:bg-orange-500 text-white py-2 px-4 rounded-md">Add Balance</button>
      </form>
    </div>

    <div class="bg-gray-800 p-6 rounded-lg shadow-lg mt-6">
      <h2 class="text-2xl font-semibold text-white mb-4">Edit User Information</h2>
      <form id="editUserForm" class="space-y-4">
        <input type="text" id="editUsername" name="username" value="{{data.username}}" class="w-full p-2 rounded-md" placeholder="New Username">
        <input type="email" id="editEmail" name="email" value="{{data.email}}" class="w-full p-2 rounded-md" placeholder="New Email">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md">Save Changes</button>
      </form>
    </div>

    <div class="mt-6 text-center">
      <button id="logoutButton" class="bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-md">Logout</button>
    </div>
  </div>
  {{/content}}

{{/extend}}
